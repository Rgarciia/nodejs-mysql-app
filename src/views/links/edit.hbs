<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <form action="/links/edit/{{link.id}}" method="POST">
                    <div class="form-group">
                        <input type="text" value="{{link.title}}" class="form-control" name="title" placeholder="Tittle" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="url" value="{{link.url}}" name="url" class="form-control" placeholder="URL">
                    </div>
                    <div class="form-group">
                        <textarea name="description" id="" cols="42" rows="10"  class="form-control" placeholder="Description">{{link.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>